<% @cities.each do |city| %>

    <%= link_to city_path(id: city) do %>
        <%= city.name %>
        <br>
    <% end %>
            Events: 
            <br>
            <% city.place.events.where(:active=>true).each do |event| %>
                <%= link_to event_path(id: event) do %>

                    <% if event.picture1.attached? %> 
                        <%= image_tag(event.picture1, size: "50") %> 
                    <% else %>
                        <%= image_tag(event.image1, size: "50") %>
                    <% end %>

                <% end %>
            <% end %>

        <br><br><br>

<% end %>
