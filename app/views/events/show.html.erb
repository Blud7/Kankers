<section>
                <div class="container">
                    
                    <h1><%= @event.name %></h1>
                    
                    <div class="divider divider-center divider-color"><!-- divider -->
                        <i class="fa fa-chevron-down"></i>
                    </div>

                    <!-- BORN TO BE A WINNER -->
                    <article class="row">
                        <div class="col-md-6">

                            <%= image_tag(@place_of_event.image_url, size: "500") %>
                            
                        </div>
                        <div class="col-md-6">
                            <h5><%= @event.description %></h5>
                            <br>
                            <div class="divider divider-center divider-color"></div>
                                <p>Lieu de l'évènement: <h5><%= @place_of_event.name %></h5></p>
                            <br>
                                <% if user_signed_in? %>
                                    <%= div_for @event do %>
                                        <%= render partial: "votes/button", locals: { event: @event } %>
                                    <% end %>
                                    <% else %>
                                        Number of votes:
                                        <%= render partial: "votes/count" %>
                                <% end %>
                        </div>
                    </article>
                    <!-- /BORN TO BE A WINNER -->

                </div>
            </section>
            <!-- / -->




            <!-- -->
            <section>
                <div class="container">

                    <!-- FEATURED BOXES 3 -->
                    <div class="row">

                    <% if @event.picture1.attached? %> 
                        <div class="col-md-4 col-6">
                            <div class="text-center">
                                <%= image_tag(@event.picture1, size: "300") %> 
                            </div>
                        </div>
                    <% else %>
                        <div class="col-md-4 col-6">
                            <div class="text-center">
                                <%= image_tag(@event.image1, size: "300") %>
                            </div>
                        </div>
                    <% end %>

                    <% if @event.picture2.attached? %>
                        <div class="col-md-4 col-6">
                            <div class="text-center">
                                <%= image_tag(@event.picture2, size: "300") %> 
                            </div>
                        </div>
                    <% else %>
                        <% if @event.image2? %>
                            <div class="col-md-4 col-6">
                                <div class="text-center">
                                    <%= image_tag(@event.image2, size: "300") %>
                                </div>
                            </div>
                        <% end %>
                    <% end %>

                    <% if @event.picture3.attached? %>
                        <div class="col-md-4 col-6">
                            <div class="text-center">
                                <%= image_tag(@event.picture3, size: "300") %> 
                            </div>
                        </div>    
                    <% else %>
                        <% if @event.image3? %>
                            <div class="col-md-4 col-6">
                                <div class="text-center">
                                    <%= image_tag(@event.image2, size: "300") %>
                                </div>
                            </div>
                        <% end %>
                    <% end %>

                    <!-- /FEATURED BOXES 3 -->

                </div>
            </section>



            <section>
            <% if user_signed_in? %>
                <p>Localisation of the event: </p>

                    <div id="map"></div>

                    <script async defer src="https://maps.googleapis.com/maps/api/js?key=<%= Rails.application.credentials.googlejs_api %>&callback=initMap"></script>

                    <script>
                function initMap() {
                // Localisation test pour paris
                var paris = {lat: <%= Place.find(@event.place_id).latitude %> , lng: <%= Place.find(@event.place_id).longitude %> };
                // la map est centrée sur paris
                var map = new google.maps.Map(
                    document.getElementById('map'), {zoom: 15, center: paris});
                // le marker est positionné sur paris
                var marker = new google.maps.Marker({position: paris, map: map});
                }
                    </script>

            <% else %>
                <br><br>    
                Please Login to see localisation of the event.
            <% end %>

</section>

