<% if user_signed_in? %>

<div class="section">
<%= form_for :new, url: events_path do |f| %>
  Name of the event:
  <br>
  <%= f.text_field :name %>
  <br>
  Brief description:
  <br>
  <%= f.text_area :description %>
  <br>
  City:
  <br>
  <%= f.collection_select :city_id, City.order(:name), :id,:name %>
  <br>
  Pictures:
  <br>
  <%= f.file_field :picture1, :accept => 'jpg/png' %>
  <br>
  <%= f.file_field :picture2, :accept => 'jpg/png' %>
  <br>
  <%= f.file_field :picture3, :accept => 'jpg/png' %>
  <br>
  <%= f.submit 'Send' %>
<% end %>

<% else %>

<% controller.redirect_to root_path %>

<% end %>